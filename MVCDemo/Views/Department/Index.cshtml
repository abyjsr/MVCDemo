@model IEnumerable<Department>
    @using MVCDemo.Models;

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Department List</title>
</head>
<body>
    <div> 
        <h2>Deaprtment List</h2>
        <ul>
            @foreach(Department departments in @Model)
            {
                <li>
                    @Html.ActionLink(departments.Name, "Index","Employee", new { DepartmentId=departments.ID},null)
                </li>
            }
        </ul>
    </div>
</body>
</html>
